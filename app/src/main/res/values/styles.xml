<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <drawable name="transparent">#00FFFFFF</drawable>
    <drawable name="default_pressed">#00FFFFFF</drawable>

    <style name="chart_style">
        <item name="android:layout_width">@dimen/chart_size</item>
        <item name="android:layout_height">@dimen/chart_size</item>
    </style>

    <style name="QText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:textColor">@color/yellow_900</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="CustomTitlePageIndicator" >
        <item name="android:background">@color/colorSecondaryWhite</item>
        <item name="footerColor">@color/colorPrimary</item>
        <item name="footerLineHeight">0dp</item>
        <item name="footerIndicatorHeight">4dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="clipPadding">8dp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="selectedColor">@color/colorPrimary</item>
        <item name="selectedBold">true</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
    </style>

    <style name="BuyTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/orange_tab_indicator_holo</item>
        <item name="android:textColor">@drawable/custom_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider_white</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>


    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="CustomProgressbar" parent="@android:style/Widget.ProgressBar">
        <item name="android:color">@color/white</item>
    </style>

    <style name="Reg_Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Reg_Button_Ripple" parent="" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/colorPrimary</item>
        <item name="mrl_rippleAlpha">0.2</item>
        <item name="mrl_rippleRoundedCorners">100dp</item>
        <item name="mrl_rippleDelayClick">false</item>
        <item name="mrl_rippleHover">true</item>
    </style>

    <!-- Floating Action Button -->
    <style name="Widget.MaterialSheetFab.Fab" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/fab_spacing</item>
        <item name="android:layout_marginBottom">@dimen/fab_spacing</item>
        <item name="android:layout_marginLeft">@dimen/fab_spacing</item>
        <item name="android:layout_marginRight">@dimen/fab_spacing</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/fab_elevation</item>
        <item name="android:src">@drawable/ic_fab</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="Widget.MaterialSheetFab.Sheet" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sheet_spacing</item>
        <item name="android:layout_marginBottom">@dimen/sheet_spacing</item>
        <item name="android:layout_marginLeft">@dimen/sheet_spacing</item>
        <item name="android:layout_marginRight">@dimen/sheet_spacing</item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Sheet.Item" parent="">
        <item name="android:layout_width">@dimen/sheet_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sheet_item_spacing</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sheet_item_textsize</item>
        <!--<item name="android:textColor">@color/text_black_87</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/sheet_item_image_spacing</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progbar_horizontal_style_big</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


</resources>