<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sgo.hpku.fragments.FragSetttingKelola">

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/llSettingLokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llMemberDetail"
        ></RelativeLayout>

    <RelativeLayout
        android:id="@+id/llMemberDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_toolbar"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <TextView
            android:id="@+id/tvMemberNameLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="30dp"
            android:gravity="left"
            android:text="@string/agent_name"
            android:textSize="@dimen/abc_text_size_small_material"

            />

        <TextView
            android:id="@+id/tvDetailMemberName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:height="30dp"
            android:gravity="right"
            android:textSize="@dimen/abc_text_size_small_material" />

        <TextView
            android:id="@+id/tvCategoryNameLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMemberNameLabel"
            android:layout_weight="1"
            android:height="30dp"
            android:gravity="left"
            android:text="@string/category"
            android:textSize="@dimen/abc_text_size_small_material"

            />

        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDetailMemberName"
            android:height="30dp"
            android:gravity="right"
            android:textSize="@dimen/abc_text_size_small_material" />

        <TextView
            android:id="@+id/tvCommNameLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCategoryNameLabel"
            android:layout_weight="2"
            android:height="30dp"
            android:gravity="left"
            android:text="@string/shop_name"
            android:textSize="@dimen/abc_text_size_small_material"

            />

        <TextView
            android:id="@+id/tvCommName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCategoryName"
            android:height="30dp"
            android:gravity="right"
            android:textSize="@dimen/abc_text_size_small_material" />


        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCommName"
            android:height="30dp"
            android:gravity="right"
            android:textSize="@dimen/abc_text_size_small_material" />

        <TextView
            android:id="@+id/tvAddressLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCommNameLabel"
            android:layout_weight="3"
            android:height="30dp"
            android:gravity="left"
            android:text="@string/myprofile_text_address"
            android:textSize="@dimen/abc_text_size_small_material"

            />

        <TextView
            android:id="@+id/tvTutupSekarangLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddress"
            android:height="30dp"
            android:gravity="left"
            android:text="@string/setup_tutup_sekarang"
            android:textSize="@dimen/abc_text_size_small_material" />

        <Switch
            android:id="@+id/swTutupToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tvTutupSekarangLabel"
            android:layout_below="@+id/tvAddress"
            android:gravity="right"
            android:textOff="@string/no"
            android:textOn="@string/yes" />


        <Button
            android:id="@+id/btnSettingLokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvAddressLabel"
            android:layout_marginEnd="106dp"
            android:layout_marginRight="106dp"
            android:text="@string/update_merchant_location" />

    </RelativeLayout>

</FrameLayout>
