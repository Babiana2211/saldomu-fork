<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_base"
        >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/text_size_small_display_2_material"
            android:padding="16dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            >

        <TextView
                android:id="@+id/text_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regist1_title"
                android:textColor="@color/grey_1000w"
                android:layout_gravity="start"
                />


        <EditText
                android:layout_marginTop="48dp"
                android:id="@+id/noHP_value"
                android:maxLength="@integer/nomor_lenght_20"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:hint="@string/regist1_edithint_nohp"
                android:textColorHint="@color/semi_white_transparant"
                android:inputType="phone"
                android:digits="1234567890"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_1000w"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:singleLine="true"/>

        <EditText
                android:layout_marginTop="16dp"
                android:enabled="true"
                android:id="@+id/name_value"
                android:maxLength="30"
                android:gravity="start|center_vertical"
                android:inputType="textPersonName|textCapSentences|text"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:hint="@string/regist1_edithint_nama"
                android:textColorHint="@color/semi_white_transparant"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:textColor="@color/grey_1000w"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:layout_marginTop="16dp"
                android:enabled="true"
                android:id="@+id/email_value"
                android:maxLength="80"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:hint="@string/regist1_edithint_email"
                android:textColorHint="@color/semi_white_transparant"
                android:textColor="@color/grey_1000w"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <CheckBox android:id="@+id/cb_termsncondition"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="16dp"
                  android:text="@string/termsncondition_checkbox_1"
                />

        <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/termsncondition_checkbox_2"
                  android:textColor="@color/grey_350"
                  android:layout_marginLeft="32dp"
                  android:clickable="true"
                  android:id="@+id/tv_termsncondition"
                />


        <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/card_bk"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="@color/colorPrimary"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleHover="true"
                >
            <Button
                    android:id="@+id/btn_reg1_verification"
                    android:enabled="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textColor="@drawable/color_selector"
                    android:gravity="center"
                    android:text="@string/regist1_button_verifikasi"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_transparant"
                    />
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>

    <FrameLayout android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
            >
            <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_copyright"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    />
    </FrameLayout>

</LinearLayout>