<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="@dimen/abc_text_size_medium_material"
    android:layout_marginTop="@dimen/abc_text_size_medium_material"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">
    <TableRow>
        <TextView
            android:text="@string/report_dialog_text_transaction_type"
                android:layout_weight="1"
                android:padding="12dip"
                android:minEms="7"
                />
        <TextView
                android:id="@+id/dialog_report_buss_scheme_name_value"
                android:text="Account Collection"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:padding="3dip" />
    </TableRow>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/grey_300"/>

    <TableRow>
        <TextView
                android:text="@string/report_dialog_text_community"
                android:layout_weight="0"
                android:padding="12dip" />
        <TextView
                android:id="@+id/dialog_report_community_value"
                android:text="Out"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:padding="3dip" />
    </TableRow>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/grey_300"/>

    <TableRow>
        <TextView
                android:text="@string/topup_token_bank_name"
                android:layout_weight="0"
                android:padding="12dip" />
        <TextView
                android:id="@+id/dialog_report_bank_name_value"
                android:text="Bank Mandiri"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:padding="3dip" />
    </TableRow>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/grey_300"/>

    <TableRow>

        <TextView
                android:text="@string/topup_token_bank_product"
                android:layout_weight="0"
                android:padding="12dip" />
        <TextView
                android:id="@+id/dialog_report_product_name_value"
                android:text="Mandiri IB"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:padding="3dip" />
    </TableRow>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/grey_300"/>
    <TableRow>
        <TextView
            android:text="@string/topup_token_amount"
            android:layout_weight="0"
            android:padding="12dip" />
        <TextView
            android:id="@+id/dialog_report_trans_amount_value"
            android:text="Rp. 200000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:padding="3dip"
            android:maxLines="1" />
    </TableRow>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/grey_300"/>

    <TableRow>
        <TextView
            android:text="@string/topup_token_fee"
            android:layout_weight="0"
            android:padding="12dip" />
        <TextView
            android:id="@+id/dialog_report_fee_value"
            android:text="Rp. 200000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:padding="3dip"
            android:maxLines="1" />
    </TableRow>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/grey_300"/>
    <TableRow>
        <TextView
            android:text="@string/topup_token_total_amount"
            android:layout_weight="0"
            android:padding="12dip" />
        <TextView
            android:id="@+id/dialog_report_total_amount_value"
            android:text="Rp. 200000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:padding="3dip"
            android:maxLines="1" />
    </TableRow>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/grey_300"/>

    <TableRow>
        <TextView
                android:text="@string/description"
                android:layout_weight="0"
                android:padding="12dip" />
        <TextView
                android:id="@+id/dialog_report_trans_description_value"
                android:text="KARTUKREDITYES - KARTU KREDIT 2"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:padding="3dip" />
    </TableRow>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/grey_300"/>

    <TableRow>
        <TextView
                android:text="@string/report_dialog_text_remark_destination"
                android:layout_weight="0"
                android:padding="12dip" />
        <TextView
                android:id="@+id/dialog_report_trans_remark_value"
                android:text="bayar lawakan"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:padding="3dip" />
    </TableRow>

</TableLayout>
