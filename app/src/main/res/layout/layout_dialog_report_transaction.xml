<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="@dimen/text_size_small_material"
    android:layout_marginTop="@dimen/text_size_small_material"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">
    <TableRow>
        <TextView
                android:text="@string/report_transaction_type"
                android:layout_weight="1"
                android:padding="12dip"
                />
        <TextView
                android:id="@+id/dialog_report_trans_detail_value"
                android:text="Billing Payment"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:padding="3dip" />
    </TableRow>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/grey_300"/>

    <TableRow>
        <TextView
            android:text="@string/report_dialog_text_userid"
            android:layout_weight="0"
            android:padding="12dip" />
        <TextView
            android:id="@+id/dialog_report_trans_user_id"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/grey_300"/>

    <TableRow>
        <TextView
            android:text="Nama"
            android:layout_weight="0"
            android:padding="12dip" />
        <TextView
            android:id="@+id/dialog_report_trans_user_name"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>

    <View   android:id="@+id/lineAlias"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/grey_300"/>

    <TableRow android:id="@+id/trAlias">

        <TextView
            android:id="@+id/tv_no_alias"
            android:layout_weight="0"
            android:padding="12dip"
            android:text="No. Tujuan" />

        <TextView
            android:id="@+id/dialog_report_trans_alias_no"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="3dip"
            android:text="Alias" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/grey_300"/>

    <TableRow>
        <TextView
            android:text="Nama Tujuan"
            android:layout_weight="0"
            android:padding="12dip"
            android:id="@+id/tv_nama_alias"/>
        <TextView
            android:id="@+id/dialog_report_trans_alias_name"
            android:text="bayar lawakan"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/grey_300"
        android:id="@+id/view_alias"/>

    <TableRow>
        <TextView
            android:text="@string/report_dialog_text_remark"
            android:layout_weight="0"
            android:padding="12dip" />
        <TextView
            android:id="@+id/dialog_report_trans_remark_value"
            android:text="bayar lawakan"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/grey_300"/>

    <TableRow>
        <TextView
                android:text="@string/topup_token_amount"
                android:layout_weight="0"
                android:padding="12dip" />
        <TextView
                android:id="@+id/dialog_report_trans_amount_value"
                android:text="Rp. 200000"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:padding="3dip" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/grey_300"/>

    <TableRow>
        <TextView
            android:text="@string/payfriends_text_fee"
            android:layout_weight="0"
            android:padding="12dip" />
        <TextView
            android:id="@+id/dialog_report_trans_admin_fee"
            android:text="Rp. 200000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/grey_300"/>

    <TableRow>
        <TextView
            android:text="@string/total"
            android:layout_weight="0"
            android:padding="12dip" />
        <TextView
            android:id="@+id/dialog_report_trans_total"
            android:text="Rp. 200000"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:padding="3dip" />
    </TableRow>

</TableLayout>
