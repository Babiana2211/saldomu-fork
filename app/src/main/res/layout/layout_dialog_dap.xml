<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginLeft="@dimen/abc_text_size_medium_material"
                android:layout_marginTop="@dimen/abc_text_size_medium_material"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TableLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                 android:stretchColumns="1">
        <TableRow>
            <TextView
                    android:text="@string/report_dialog_text_userid"
                    android:layout_weight="1"
                    android:padding="3dip"
                    />
            <TextView
                    android:id="@+id/dialog_report_userid_value"
                    android:text="6281285229384"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:padding="3dip" />
        </TableRow>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/grey_300"/>

        <TableRow>
            <TextView
                    android:text="@string/biller_name"
                    android:layout_weight="1"
                    android:padding="3dip"
                    />
            <TextView
                    android:id="@+id/dialog_report_name_value"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:padding="3dip" />
        </TableRow>


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/grey_300"/>

        <TableRow>
            <TextView
                    android:text="@string/pulsainput_text_denom"
                    android:layout_weight="1"
                    android:padding="3dip" />
            <TextView
                    android:id="@+id/dialog_report_operator_value"
                    android:text="Axis"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:padding="3dip" />
        </TableRow>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/grey_300"/>

        <TableRow>
            <TextView
                    android:text="@string/pulsa_nominal"
                    android:layout_weight="1"
                    android:padding="3dip" />
            <TextView
                    android:id="@+id/dialog_report_nominal_value"
                    android:text="Axis 1000"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:padding="3dip" />
        </TableRow>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/grey_300"/>
        <TableRow>
            <TextView
                    android:text="@string/billertoken_text_payment_options"
                    android:layout_weight="1"
                    android:padding="3dip" />
            <TextView
                    android:id="@+id/dialog_report_payment_options_value"
                    android:text=""
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:padding="3dip" />
        </TableRow>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/grey_300"/>

        <TableRow>
            <TextView
                    android:text="@string/sgoplus_text_amount"
                    android:layout_weight="1"
                    android:padding="3dip" />
            <TextView
                    android:id="@+id/dialog_report_amount_value"
                    android:text="Rp. 200000"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:padding="3dip" />
        </TableRow>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/grey_300"/>

        <TableRow>
            <TextView
                    android:text="@string/topup_token_fee"
                    android:layout_weight="1"
                    android:padding="3dip" />
            <TextView
                    android:id="@+id/dialog_reportdap_fee_value"
                    android:text=""
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:padding="3dip" />
        </TableRow>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/grey_300"/>

        <TableRow>
            <TextView
                    android:text="@string/topup_token_total_amount"
                    android:layout_weight="1"
                    android:padding="3dip" />
            <TextView
                    android:id="@+id/dialog_reportdap_total_amount_value"
                    android:text=""
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:padding="3dip" />
        </TableRow>

    </TableLayout>


</RelativeLayout>
