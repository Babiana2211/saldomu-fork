                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="3"
                              android:textColor="@color/grey_1000w"
                              android:textSize="@dimen/abc_text_size_small_material"
                              android:layout_centerVertical="true"
