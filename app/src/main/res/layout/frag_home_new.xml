<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackgroundColor">

    <LinearLayout
        android:id="@+id/llAgentDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_600"
        android:padding="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_online"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_menu_material"
            />

        <Switch
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:id="@+id/swSettingOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/no"
            android:textOn="@string/yes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/img_greeting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="greetings"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/tv_greetings"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency"
            android:textSize="@dimen/text_size_large_material"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_saldo"
            android:text="123.000"
            android:textSize="26sp"
            android:textColor="@color/colorPrimary"
            />

        <ImageView
            android:id="@+id/btn_refresh_balance"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_refresh_balance"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_background_orange"
            android:text="@string/menu_item_title_topup"
            android:id="@+id/btn_topup"
            android:singleLine="false"
            android:textSize="12sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorSecondaryWhiteFixed">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <GridView
                android:numColumns="4"
                android:gravity="center"
                android:columnWidth="100dp"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/grid"
                android:padding="2dp"
                android:background="@color/colorSecondaryWhiteFixed"
                android:verticalSpacing="2dp"
                android:horizontalSpacing="2dp"
                />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/gridview_progbar"
                android:visibility="invisible"/>
        </RelativeLayout>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="8dp"-->
            <!--android:layout_margin="5dp"-->
            <!--android:background="@color/colorSecondaryWhiteFixed"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorSecondaryWhiteFixed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparant"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:id="@+id/PLS">

                    <TextView
                        android:id="@+id/tv_pulsa"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="@string/menu_item_title_pulsa_agent"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view_pulsa"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:id="@+id/BPJS">

                    <TextView
                        android:id="@+id/tv_bpjs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/newhome_bpjs"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view_bpjs"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:id="@+id/TKN">

                    <TextView
                        android:id="@+id/tv_listrikPLN"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/newhome_listrik_pln"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view_listrikPLN"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="8dp"
                android:gravity="center_vertical"
                android:background="@color/white">
                <EditText
                    android:id="@+id/input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/edittext_hint_id"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:inputType="number"
                    />
                <Button
                    android:id="@+id/btn_beli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_item_title_beli"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_background_orange"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>