    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_search_request_bbs_activity_label"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/locationRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="40dp" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currentLocationRadioBtn"
                android:checked="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/current_location_request_bbs_activity_label"
                android:textSize="15sp"
                android:layout_marginTop="-30dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/searchLocationRadioBtn" />

            <!--<com.pin.www.pin.CustomEditText
                  android:layout_width="match_parent"
