<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:layout_height="50dp">


    <RadioGroup
        android:id="@+id/groupLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:paddingTop="14dp">

        <RadioButton
            android:id="@+id/rb_lang_ind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_lang_left_radio_black"
            android:button="@color/transparant"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp"
            android:text="@string/lbl_lang_ind"
            android:textAlignment="center"
            android:textColor="@drawable/radio_btn_selector_text_lang_setting"
            android:textSize="9sp" />

        <RadioButton
            android:id="@+id/rb_lang_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_lang_right_radio_black"
            android:button="@color/transparant"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp"
            android:text="@string/lbl_lang_eng"
            android:textAlignment="center"
            android:textColor="@drawable/radio_btn_selector_text_lang_setting"
            android:textSize="9sp" />
    </RadioGroup>


    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:textColor="#777777"
        android:textSize="13sp" />

</RelativeLayout>