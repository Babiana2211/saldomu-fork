    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/upgrade_online_button"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="9dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_transfer_p2p" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_transfer_p2p" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="5.7sp"
                    android:text="@string/menu_item_title_upgrade_online"
                    android:textColor="#3f6db5"
                    android:textSize="14.3sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/upgrade_via_agent_button"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="9dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_transfer_bank" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_groups_icon_color"
                    android:tint="#5ec8da" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="5.7sp"
                    android:text="@string/menu_item_title_upgrade_via_agent"
                    android:textColor="#5ec8da"
                    android:textSize="14.3sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

