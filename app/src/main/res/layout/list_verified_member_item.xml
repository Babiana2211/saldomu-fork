<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Foto KTP / Paspor"
        android:textColor="@color/grey_1000b"
        android:textSize="16dp"
        android:id="@+id/tv_foto_ktp_paspor"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_foto_ktp_paspor"
        android:id="@+id/camera_ktp_paspor"
        android:src="@drawable/red_ball_icon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/camera_ktp_paspor"
        android:layout_below="@+id/tv_foto_ktp_paspor"
        android:text="1. Pastikan Foto jelas dan tidak buram"
        android:textColor="@color/grey_1000b"
        android:id="@+id/tv_ktp_paspor_1"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ktp_paspor_1"
        android:layout_toRightOf="@+id/camera_ktp_paspor"
        android:text="2. Foto asli (bukan fotocopy, hasil scan atau edit)"
        android:textColor="@color/grey_1000b"
        android:id="@+id/tv_ktp_paspor_2"
        android:layout_margin="5dp"/>

</RelativeLayout>
</LinearLayout>