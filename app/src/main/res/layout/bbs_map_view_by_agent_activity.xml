<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/list">



    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <include android:id="@+id/main_toolbar"
            layout="@layout/toolbar_main"/>




        <fragment
            android:id="@+id/agentMap"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_below="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.gms.maps.SupportMapFragment">

            <LinearLayout
                android:id="@+id/llLegend"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:alpha="0.7"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp">

                <LinearLayout
                    android:id="@+id/llLegendAgent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:src="@drawable/map_person"
                        tools:layout_editor_absoluteX="-71dp"
                        tools:layout_editor_absoluteY="320dp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange_800"
                        android:layout_alignBottom="@+id/imageView2"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView2"
                        android:layout_toRightOf="@+id/imageView2"
                        android:text="@string/agent"
                        tools:layout_editor_absoluteX="-27dp"
                        tools:layout_editor_absoluteY="329dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLegendYou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="70px"
                        android:layout_height="70px"
                        android:src="@drawable/search_location"
                        tools:layout_editor_absoluteX="-71dp"
                        tools:layout_editor_absoluteY="320dp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange_800"
                        android:layout_alignBottom="@+id/imageView3"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView3"
                        android:layout_toRightOf="@+id/imageView3"
                        android:text="@string/bbs_you"
                        tools:layout_editor_absoluteX="-27dp"
                        tools:layout_editor_absoluteY="329dp" />


                </LinearLayout>

            </LinearLayout>

            </fragment>


    </FrameLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TableRow android:layout_marginTop="10dip">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/ivPPMember"
                    android:src="@drawable/user_unknown_menu"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="3.5"
                    android:layout_weight="1"
                    />


            </TableRow>

            <TableRow android:layout_marginTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/category"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tvCategoryName"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="14sp"
                    ></TextView>

            </TableRow>

            <TableRow android:layout_marginTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/member_name"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:id="@+id/tvMemberName"
                    ></TextView>

            </TableRow>

            <TableRow android:layout_marginTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/amount"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:id="@+id/tvAmount"
                    ></TextView>

            </TableRow>

            <TableRow android:layout_marginTop="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/bbs_note_meeting_point"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:id="@+id/tvBbsNote"
                    ></TextView>

            </TableRow>

            <TableRow android:layout_marginTop="10dip" android:layout_marginBottom="40dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/duration"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:id="@+id/tvDurasi"
                    ></TextView>

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_below="@+id/llAgentShop"
            android:id="@+id/llButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btnTibaLokasi"
                android:text="@string/tiba_di_lokasi"
                />
        </LinearLayout>

        </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
