<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community Code"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/frag_denom_comm_code_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textColor="@color/colorSecondaryDark"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community Name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/frag_denom_comm_name_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textColor="@color/colorSecondaryDark"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member Code"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/frag_denom_member_code_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textColor="@color/colorSecondaryDark"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Product"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
            android:id="@+id/frag_denom_bank_product_spinner"
            android:layout_gravity="center_horizontal"/>
        <!--<Spinner-->
            <!---->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="@dimen/abc_text_size_medium_material"-->
            <!--android:textColor="@color/colorSecondaryDark"-->
            <!--android:layout_marginTop="4dp"-->
            <!--/>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item ID"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/frag_denom_item_id_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textColor="@color/colorSecondaryDark"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold"
            android:id="@+id/frag_denom_item_name_field"
            />
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="@dimen/abc_text_size_medium_material"-->
            <!--android:textColor="@color/colorSecondaryDark"-->
            <!--android:layout_marginTop="4dp"-->
            <!--/>-->

    </LinearLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bk"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="@color/white"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleDelayClick="false"
        app:mrl_rippleHover="true"
        >
        <Button
            android:id="@+id/frag_denom_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="@string/save"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_transparant"
            />
    </com.balysv.materialripple.MaterialRippleLayout>

</LinearLayout>